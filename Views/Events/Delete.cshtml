@{
}

<h1>Delete Event</h1>

<form method="post">
    @foreach (var evnt in ViewBag.Events)
    {
        <div class="form-group">
            <label>
                <span>@evnt.Name</span>
                <input type="checkbox" name="eventIds" value="@evnt.Id" />
            </label>
        </div>
    }
    <input type="submit" name="Delete Selected Event" class="btn btn-danger"/>
</form>
